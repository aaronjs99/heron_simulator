<launch>
  <!-- Local Playback Helper -->
  <param name="/use_sim_time" value="true"/>

  <!-- Load Robot Description (Needed for Rviz) -->
  <param name="robot_description" command="$(find xacro)/xacro '$(find heron_description)/urdf/heron.urdf.xacro' simulation:=false" />

  <!-- Start Rviz with config -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find heron_simulator)/config/playback.rviz"/>

  <!-- Instructions -->
  <!-- Run manualy: rosbag play inspection_mission.bag waiting for user trigger -->
</launch>
